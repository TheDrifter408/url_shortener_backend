generator client {
  provider = "prisma-client-js"
  moduleFormat = "cjs"
}

datasource db {
  provider  = "postgresql"
}

// The URL table
model URL {
  id Int  @id @default(autoincrement())
  slug String @unique
  long_url String // This is the original URL that where it should redirect to
  created_at DateTime @default(now())
}